{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,

        "noEmit": false
    },
    "exclude": [
        "node_modules",
        "./tests",
        "./src/__tests__",
        "./src/*.spec.ts",
        "./src/*.test.ts",
        "src/TypeSafetyTestFixtures",
        "dist",
        "example"
    ]
}
